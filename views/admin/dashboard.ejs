<div class="top-bar">
    <h1>نظرة عامة على النظام</h1>
    <div class="user-info">
        <span>مرحباً، <strong style="color: var(--accent);">الأدمن</strong></span>
    </div>
</div>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 40px;">
    <div style="background: var(--card-bg); padding: 20px; border-radius: 12px; border-top: 3px solid var(--accent);">
        <p style="color: #888; margin: 0;">إجمالي الفنيين</p>
        <h2 style="font-size: 32px; margin: 10px 0;">
            <%= techs.length %>
        </h2>
        <i class="fas fa-users" style="float: left; margin-top: -40px; opacity: 0.2; font-size: 40px;"></i>
    </div>
    <div style="background: var(--card-bg); padding: 20px; border-radius: 12px; border-top: 3px solid #00ff88;">
        <p style="color: #888; margin: 0;">مهام تم إنجازها</p>
        <h2 style="font-size: 32px; margin: 10px 0;">24</h2> <i class="fas fa-check-circle" style="float: left; margin-top: -40px; opacity: 0.2; font-size: 40px;"></i>
    </div>
    <div style="background: var(--card-bg); padding: 20px; border-radius: 12px; border-top: 3px solid #ff4444;">
        <p style="color: #888; margin: 0;">مهام قيد الانتظار</p>
        <h2 style="font-size: 32px; margin: 10px 0;">7</h2> <i class="fas fa-clock" style="float: left; margin-top: -40px; opacity: 0.2; font-size: 40px;"></i>
    </div>
</div>

<div style="background: var(--card-bg); padding: 25px; border-radius: 15px;">
    <h3 style="margin-bottom: 20px;">قائمة الفنيين والخبراء</h3>
    <table style="width: 100%; border-collapse: collapse; text-align: right;">
        <thead>
            <tr style="border-bottom: 2px solid #333;">
                <th style="padding: 15px;">الاسم</th>
                <th style="padding: 15px;">التخصص</th>
                <th style="padding: 15px;">الحالة</th>
                <th style="padding: 15px;">العمليات</th>
            </tr>
        </thead>
        <tbody>
            <% techs.forEach(tech => { %>
                <tr style="border-bottom: 1px solid #222; transition: 0.3s;" onmouseover="this.style.backgroundColor='#222'" onmouseout="this.style.backgroundColor='transparent'">
                    <td style="padding: 15px;">
                        <%= tech.name %>
                    </td>
                    <td style="padding: 15px;"><span style="background: #333; padding: 4px 10px; border-radius: 5px; font-size: 13px;"><%= tech.specialty %></span></td>
                    <td style="padding: 15px;"><span style="color: #00ff88;">● نشط</span></td>
                    <td style="padding: 15px;">
                        <button style="background: none; border: 1px solid var(--accent); color: var(--accent); padding: 5px 10px; border-radius: 5px; cursor: pointer;">تعديل</button>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>